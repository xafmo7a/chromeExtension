{
    "manifest_version": 3,
    "name": "Stepify",
    "version": "1.0.0",
    "description": "Break down tasks into clear, actionable steps",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage"
    ],

    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "outDir": "dist",
        "strict": true
    }
}